<div class="container-fluid">
  <div class="jumbotron">
    <h1 id="sign-name" class="text-center"><i class="fas fa-hamburger" style="color: brown"></i><a href="" id="sign-glow"> Eat Da Burgers! </a><i class="fas fa-hamburger" style="color: brown"></i></h1>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4 text-center">
      <h2 id="ready-to-eat">Hot and Ready to Eat</h2>
      {{#each burger}}
        {{#unless this.devoured}}
            <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
              <label id="ready-items">{{this.burger_name}}</label>
              <input type="hidden" name="devoured" value={{this.devoured}}>&nbsp
              <button type="submit" class="btn btn-sm btn-danger" id="eat-btn">
              <i class="fas fa-hamburger"></i> Devour!</button>
           </form>
          {{/unless}}
          {{/each}}
    </div>
    
  <div class="col-md-4 text-center">
    <h2 id="ready-to-eat">Burger Heaven</h2>
    {{#each burger}}
      {{#if this.devoured}}
          <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
            <label id="ready-items">{{this.burger_name}}</label>
            <input type="hidden" name="devoured" value={{this.devoured}}>
            {{!-- <button type="submit" class="btn btn-sm btn-primary" id="eat-btn">
            <span class="glyphicon glyphicon-triangle-left"></span> RE-N-CARN-ATE!</button> --}}
         </form>
        {{/if}}
        {{/each}}
        </div>
    </div>
    <div class="col-md-2"></div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center" id="add-form">
            <form action="/add" method="POST">
        <div class="form-group">
            <label for="new-burger" class="control-label">Create A New Burger</label>
            <input class="form-control" type="text" id="new-burger" name="name" value="" placeholder="Add New Burger Name">
            <button type="submit" class="btn btn-success btn-block" id="add-btn">Add Burger</button>
        </div>
        </form>
            {{#if alert}}
            <p style="color: red">{{alert}}</p>
            {{/if}}
            <div>
                <h3 id="total">Total Burgers Devoured: {{total}}</h3>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>